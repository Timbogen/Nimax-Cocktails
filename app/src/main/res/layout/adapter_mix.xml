<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/colorPrimary"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_drag_handle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/drag_handle"
        android:contentDescription="@string/drag" />

    <TextView
        android:id="@+id/text_drink_name"
        app:layout_constraintLeft_toRightOf="@id/image_drag_handle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="148dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"/>

    <TextView
        android:id="@+id/text_drink_amount"
        app:layout_constraintLeft_toRightOf="@id/text_drink_name"
        app:layout_constraintRight_toLeftOf="@id/image_delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="18sp"
        android:layout_marginEnd="16dp"
        android:layout_width="0dp"
        android:gravity="end"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"/>

    <ImageView
        android:id="@+id/image_delete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/mixing_button_delete"
        android:contentDescription="@string/drag" />

</androidx.constraintlayout.widget.ConstraintLayout>