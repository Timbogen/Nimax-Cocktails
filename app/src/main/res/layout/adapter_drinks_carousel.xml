<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_drink"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="25dp"
            android:contentDescription="@string/mixing_image_drinks"
            android:layout_marginLeft="50dp" />

        <LinearLayout
            android:layout_margin="24dp"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_drink_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:id="@+id/text_drink_alcohol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:text="@string/mixing_level"
                android:textSize="20sp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:id="@+id/text_drink_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:layout_marginLeft="20dp" />

        </LinearLayout>

</LinearLayout>